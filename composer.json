{
    "name": "bertuss/certify",
    "description": "Simple SSL certificate information library",
    "keywords": [
        "Certify"
    ],
    "homepage": "https://github.com/bertuss/certify",
    "license": "MIT",
    "authors": [
        {
            "name": "Bertus Steenberg",
            "email": "brt@fastmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "5.*",
        "scrutinizer/ocular": "~1.1",
        "symfony/var-dumper": "~2.7"
    },
    "autoload": {
        "psr-4": {
            "bertuss\\Certify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "bertuss\\Certify\\test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
